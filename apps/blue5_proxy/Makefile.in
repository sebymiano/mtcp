#	$(MSG) "   CC $<"
#	$(HIDE) $(GCC) -o $@ $^ $(YAML_INC) $(LIB_DIR) $(LIBS) ${UTIL_OBJ} ${MTCP_FLD}/lib/libmtcp.a
#	#mv $@ .

clean:
	$(MSG) "   CLEAN $(TARGETS)"
	$(HIDE) rm -f *~ *.o ${TARGETS} log_*

distclean: clean
	rm -rf Makefile
